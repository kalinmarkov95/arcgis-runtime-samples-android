<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.esri.arcgisruntime.sample.displaymap" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher_icon_foreground"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name=".location.LocationService"
            android:enabled="true" >
        </service>
        <receiver
            android:name=".location.RestartServiceBroadcastReceiver">
            android:enabled="true"
            android:exported="true"
            android:label="RestartServiceWhenStopped"
        </receiver>
        <receiver
            android:name=".location.LocationBroadcastReceiver2">
            android:process=":remote"
            android:enabled="true"
            android:exported="true"
            android:label="Get location"
        </receiver>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>